<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_new_issue">

    <fragment
        android:id="@+id/navigation_new_issue"
        android:name="com.example.civiswipe.ui.newissue.NewIssueFragment"
        android:label="@string/title_new_issue"
        tools:layout="@layout/fragment_submit_issue" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.civiswipe.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_issues"
        android:name="com.example.civiswipe.ui.notifications.NotificationsFragment"
        android:label="Issues"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.civiswipe.ui.home.HomeFragment"
        android:label="Submissions"
        tools:layout="@layout/home_fragment" />
</navigation>